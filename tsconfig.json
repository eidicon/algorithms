{
    "compilerOptions": {
        "experimentalDecorators": true,
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "listEmittedFiles": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "outDir": "build",
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "lib": ["es2018"],
        "target": "es2017"
    },
    "exclude": [
        "node_modules",
        "build",
        "**/*.test.ts"
    ]
}
